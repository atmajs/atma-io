{
    "name": "atma-io",
    "description": "File / Directory Classes",
    "author": {
        "name": "Alex Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "1.2.16",
    "main": "./lib/io.js",
    "types": "./lib/io.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/atma-io.git"
    },
    "license": "MIT",
    "dependencies": {
        "atma-class": "^1.1.82",
        "atma-io-middleware-uglify": "^1.1.24",
        "atma-logger": ">0.0.81",
        "atma-utils": "^0.1.20"
    },
    "devDependencies": {
        "@types/node": "^8.5.10",
        "app-bundler": "0.0.63",
        "atma": "^0.11.10",
        "atma-io-middleware-importer": "^1.1.32",
        "atma-loader-ts": "^1.0.0",
        "dts-bundle": "^0.7.3"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler && npm run build-dts",
        "watch": "app-bundler --watch",
        "build-io": "app-bundler --app io",
        "server": "atma server",
        "release": "atma bump && npm run build && git add -A && git commit -am \"bump\" && npm publish && git push",
        "build-dts": "tsc -p . && atma run tools/build-dts"
    },
    "app-bundler": {
        "apps": {
            "io": {
                "outputMain": "lib/io.js",
                "js": []
            },
            "minified": {
                "outputMain": "lib/io.min.js",
                "middlewares": {
                    "ts": [
                        "atma-loader-ts:read"
                    ],
                    "js": [
                        "atma-io-middleware-uglify:write"
                    ]
                }
            }
        },
        "common": {
            "file": "src/export.ts",
            "package": {
                "module": "commonjs",
                "commonjs": {
                    "output": "simplified"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "middlewares": {
                "js": [],
                "ts": [
                    "atma-loader-ts:read"
                ]
            },
            "dynamicDependencies": [
                "atma-logger",
                "atma-utils",
                "atma-class",
                "^fs$",
                "^os$",
                "readline"
            ]
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "ts",
                    "test"
                ],
                "typescript": {
                    "compilerOptions": {
                        "sourceMap": false,
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "CommonJS"
                        }
                    }
                }
            }
        }
    }
}
