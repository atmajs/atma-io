{
    "files": [
        "src/export.ts"
    ],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": [ "src/*" ]
        },
        "lib": [ "ES2019", "dom" ],
        "typeRoots": [
            "node_modules/@types",
            "typings/globals",
            "typings-other"
        ],

        "outDir": "ts-temp",
        "declaration": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDeclarationOnly": true
    }
}
